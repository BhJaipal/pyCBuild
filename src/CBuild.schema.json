{
	"title": "PY-CBuild",
	"description": "A C/C++ Build system written in Python just like cmake",
	"required": ["projectName", "outputs"],
	"properties": {
		"projectName": {
			"type": "string"
		},
		"outputs": {
			"type": "array",
			"items": {
				"type": "object",
				"required": ["outputName", "outputType", "src"],
				"properties": {
					"outputName": {
						"description": "The name of the output",
						"type": "string"
					},
					"outputType": {
						"type": "string",
						"enum": ["executable", "shared_lib", "static_lib"]
					},
					"src": {
						"description": "Library source files",
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"system_deps": {
						"type": "object",
						"properties": {
							"include": {
								"type": "array",
								"description": "Include directories installed on the system",
								"items": {
									"type": "string"
								}
							},
							"libs": {
								"description": "Link libraries installed on the system",
								"type": "array",
								"items": {
									"type": "string"
								}
							}
						}
					},
					"build_deps": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"path": {
									"description": "The path to dependency",
									"type": "string"
								},
								"include": {
									"description": "Include directories",
									"type": "string"
								},
								"libs": {
									"type": "string",
									"description": "Link libraries"
								}
							}
						}
					}
				}
			}
		}
	}
}
